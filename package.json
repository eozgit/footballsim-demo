{
  "name": "footballsim-demo",
  "description": "A real-time football simulation engine integrated with a React-based telemetry dashboard, featuring a multi-threaded Phaser visualization, Zustand state management, and virtualized diagnostic logging.",
  "type": "module",
  "version": "1.1.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/eozgit/footballsim-demo.git"
  },
  "author": "Phaser Studio <support@phaser.io> (https://phaser.io/)",
  "license": "MIT",
  "licenseUrl": "http://www.opensource.org/licenses/mit-license.php",
  "homepage": "https://github.com/eozgit/footballsim",
  "keywords": [
    "football-simulation",
    "phaser-ce",
    "react-19",
    "web-worker",
    "telemetry-dashboard",
    "zustand",
    "flexlayout-react",
    "react-virtuoso",
    "real-time-simulation",
    "sports-engine",
    "typescript",
    "data-visualization"
  ],
  "scripts": {
    "dev": "node log.js dev & vite --config vite/config.dev.mjs",
    "build": "node log.js build & vite build --config vite/config.prod.mjs",
    "dev-nolog": "vite --config vite/config.dev.mjs",
    "build-nolog": "vite build --config vite/config.prod.mjs",
    "prepare": "husky",
    "lint:check": "eslint .",
    "lint": "eslint . --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,css}\" \"*.{js,mjs,json}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,css}\" \"*.{js,mjs,json}\"",
    "type-check": "tsc --noEmit",
    "context": "npx -y -p ts-morph node scripts/generate-context.js",
    "check:circ": "madge --circular --extensions ts--exclude \"node_modules\" src",
    "graph:deps": "madge --image graph.png --extensions ts src",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:json": "vitest run --reporter=json --outputFile=test-results.json"
  },
  "dependencies": {
    "flexlayout-react": "^0.8.17",
    "footballsim": "/home/enis/Work/fse1",
    "leva": "^0.10.1",
    "phaser": "^3.90.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-virtuoso": "^4.18.1",
    "zustand": "^5.0.9"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@stylistic/eslint-plugin": "^5.7.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "@vitejs/plugin-react": "^4.3.4",
    "@vitest/coverage-v8": "^4.0.17",
    "@vitest/ui": "^4.0.17",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-n": "^17.23.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.19",
    "eslint-plugin-sonarjs": "^3.0.5",
    "eslint-plugin-unicorn": "^62.0.0",
    "eslint-plugin-unused-imports": "^4.3.0",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "jsdom": "^27.4.0",
    "lint-staged": "^16.2.7",
    "madge": "^8.0.0",
    "prettier": "^3.7.4",
    "terser": "^5.28.1",
    "typescript": "~5.7.2",
    "typescript-eslint": "^8.52.0",
    "vite": "^6.3.1",
    "vitest": "^4.0.17"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}
